<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="80dp"
    android:paddingRight="80dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="240dp"
        android:layout_height="112dp"
        android:fontFamily="@font/oswald"
        android:text="@string/app_title"
        android:textColor="#FFFFFF"
        android:textSize="80sp" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/oswald_light"
        android:gravity="right"
        android:text="@string/app_subtitle"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_main_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="7dip"
        android:background="@drawable/rounded_white_button"
        android:text="@string/login_button_confirm"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/catamaran_semibold"
        android:includeFontPadding="false"
        android:textSize="25sp"
        android:onClick="openLoginActivity" />

    <Button
        android:id="@+id/button_main_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:paddingVertical="7dip"
        android:background="@drawable/rounded_white_button"
        android:includeFontPadding="false"
        android:text="@string/register_button_confirm"
        android:textColor="@color/colorAccent"
        android:fontFamily="@font/catamaran_semibold"
        android:textSize="25sp"
        android:onClick="openRegisterActivity"/>
</LinearLayout>