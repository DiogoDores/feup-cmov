<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/basket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/app_title"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorRed"
            android:layout_marginLeft="10dp"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_camera_open"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_button"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_send_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorRed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingVertical="5dip"
        android:background="@color/textColorRed">

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dip"
            android:fontFamily="@font/catamaran_semibold"
            android:text="Quantity"
            android:textColor="@color/textColorWhite"
            android:includeFontPadding="false"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/quantity_text"
            android:fontFamily="@font/catamaran_semibold"
            android:text="Name"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorWhite"
            android:layout_marginLeft="10dp"
            android:includeFontPadding="false"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:text="Price"
            android:fontFamily="@font/catamaran_semibold"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorWhite"
            android:includeFontPadding="false"
            android:textSize="17sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="586dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColorRed"
        android:gravity="bottom"
        android:paddingVertical="5dip">

        <Button
            android:id="@+id/basket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:background="@color/textColorRed"
            android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
            android:text="Basket"
            android:textColor="@color/textColorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/catamaran_semibold"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/textColorWhite" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:background="@color/textColorRed"
            android:drawableStart="@drawable/ic_confirmation_number_black_24dp"
            android:text="Receipts"
            android:textColor="@color/textColorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/catamaran_semibold"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>


</LinearLayout>