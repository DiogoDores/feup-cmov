<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/basket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald_bold"
            android:text="@string/app_title"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorRed"
            android:layout_marginStart="10dp"
            android:textSize="30sp"
            android:includeFontPadding="false"/>

        <Button
            android:id="@+id/button_camera_open"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_button"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_send_black_24dp"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/textColorRed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        android:background="@drawable/rounded_red_button">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp">

            <TextView
                android:id="@+id/you_have_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="You have"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/voucher_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="8"
                android:layout_below="@id/you_have_id"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="vouchers"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/voucher_num"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:includeFontPadding="false"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp">

            <TextView
                android:id="@+id/accumulated_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="You've accumulated"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/cum_shot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="20.23â‚¬"
                android:layout_below="@id/accumulated_text"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/catamaran"
                android:text="in your account"
                android:layout_below="@id/cum_shot"
                android:textColor="@color/textColorWhite"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:includeFontPadding="false"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/textColorRed"
        android:paddingVertical="5dip"
        android:gravity="bottom">

        <Button
            android:id="@+id/basket_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:background="@color/textColorRed"
            android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
            android:text="Basket"
            android:textColor="@color/textColorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/catamaran_semibold"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/textColorWhite" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:background="@color/textColorRed"
            android:drawableStart="@drawable/ic_confirmation_number_black_24dp"
            android:text="Receipts"
            android:textColor="@color/textColorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/catamaran_semibold"
            android:drawablePadding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>


</LinearLayout>