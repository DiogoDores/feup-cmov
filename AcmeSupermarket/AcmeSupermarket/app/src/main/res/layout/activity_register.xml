<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/edit_register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/register_name_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/all_username_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/all_password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button_register_confirm"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:text="@string/register_button_confirm" />

</LinearLayout>