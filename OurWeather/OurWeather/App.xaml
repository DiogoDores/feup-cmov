<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OurWeather.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BarBackgroundColor">#FFFFFF</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#F5F5F5"></Setter>
                <Setter Property="BarTextColor" Value="Black"></Setter>
            </Style>
            <OnPlatform x:Key="font_sarala" x:TypeArguments="x:String">
                <On Platform="Android" Value="Sarala-Regular.ttf#Sarala" />
                <On Platform="UWP" Value="Assets/Fonts/Sarala-Regular.ttf#Sarala" />
            </OnPlatform>
            <OnPlatform x:Key="font_sarala_bold" x:TypeArguments="x:String">
                <On Platform="Android" Value="Sarala Bold.ttf#Sarala" />
                <On Platform="UWP" Value="Assets/Fonts/Sarala-Regular.ttf#Sarala" />
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>